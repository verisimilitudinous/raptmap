<div class="content-blok">
  <h2>
    <%= t('.unsubscribe_heading') %>
  </h2>
  <p>
    <%= t('.unsubscribe_html') %>
  </p>
</div>
<% if @user.errors.any? %>
  <div id="error-explanation" class="content-blok">
    <ul>
      <% @user.errors.each do |attr, msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @user, url: unsubscribe_path, method: :post do |f| %>
  <div class="field content-blok">
    <%= image_tag 'envelope.svg' %>
    <%= f.label :email, t('.email_label') %>
    <%= f.text_field :email %>
  </div>
  <div class="actions content-blok">
    <%= f.submit t('.submit_label') %>
  </div>
<% end %>
